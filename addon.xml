<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.kortibookshelf" name="Audiobookshelf Client" version="0.0.1" provider-name="korti">
	<requires>
		<import addon="xbmc.python" version="3.0.0"/>
		<import addon="script.module.requests" version="2.31.0" />
		<import addon="script.module.web-pdb" version="1.6.2"/>
	</requires>
	<extension point="xbmc.python.pluginsource" library="default.py">
		<provides>audio</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">Audiobookshelf for KODI</summary>
		<description lang="en_GB"></description>
		<language></language>
		<platform>all</platform>
		<assets>
			<icon>resources/icon.png</icon>
			<fanart>resources/fanart.jpg</fanart>
			<banner></banner> <!-- optional -->
			<clearlogo>resources/clearlogo.png</clearlogo> <!-- optional -->
			<screenshot></screenshot> <!-- optional, max. 10 -->
		</assets>
	</extension>
	<extension point="xbmc.addon.metadata">
		<settings>settings.xml</settings>
	</extension>
</addon>
